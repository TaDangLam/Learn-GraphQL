generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Book {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  author    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Author {
  id   String @id @default(auto()) @map("_id") @db.ObjectId
  name String
  age  Int
}
